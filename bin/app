#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'ui/console'
require 'ui/ui'

require 'db/reader'
require 'db/writer'
require 'db/db'

require 'actions/lister'
require 'actions/creator'
require 'actions/finder'

require 'menu'
require 'conman'

ui   = UI.new(Console.new($stdin, $stdout))

path = "./contacts"
db   = DB.new(Reader.new(path), Writer.new(path))

actions = [
  ["List contacts",   Lister.new( ui, db)],
  ["Add contacts",    Creator.new(ui, db)],
  ["Search contacts", Finder.new( ui, db)],
  ["Exit",            nil]
]

menu   = Menu.new(ui, actions)
conman = Conman.new(menu)
conman.run